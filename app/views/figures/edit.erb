<h1>Edit a Figure Here</h1>

<form action="/figures/<%= @figure.id %>" method="post">

  <label for="figure_name">Name: </label>
  <input type="text" name="figure[name]" value="<%= @figure.name %>"
    id="figure_name">

  <br>

  <h3>Select a Title or create a new one</h3>
  <% @titles.each do |title| %>
    <li>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>"
        value="<%= title.id %>"
        <%= 'checked' if @figure.titles.include?(title)%> ><%= title.name %>
    </li>
  <% end %>

  <br>

  <label for="title">Title: </label>
  <input type="text" name="title[name]" id="new_title">

  <br>

  <h3>Select a Landmark or create a new one</h3>
  <% @landmarks.each do |landmark| %>
    <li>
      <input type="checkbox" name="figure[landmark_ids][]"
      id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"
      <%= 'checked' if @figure.landmarks.include?(landmark)%> >
      <%= landmark.name %>
    </li>
  <% end %>

  <br>

  <label for="landmark">Landmark: </label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <br>
  <input type="submit" value="Edit Figure">
</form>
